	void leerVChar(char*A,int n)
	{int i;
	for(i=0;i<n;i++)
	{cin>>A[i];}
	}
	void imprecVChar(char*A, int n)
	{int i;
	for(i=0;i<n;i++)
	{cout<<A[i];}
	}
	bool Espalindrome(char*A, int n)
	{int i;
	for (i=0; i<n; i++)
	{if (A[i]==A[n-i-1])
	{}
	else{return false;}
	return true;}
	}
